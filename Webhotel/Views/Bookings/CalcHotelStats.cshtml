@model IEnumerable<Webhotel.Models.ViewModels.HotelStatistics>

@{
    ViewData["Title"] = "CalcHotelStats";
}

<h2>Customer distribution with respect to postcodes</h2>
<br />

<div>
    <table class="table">
        @* .table is a Bootstrap class giving table styles *@
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.CustomerCount)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Postcode)
            </th>
        </tr>

        @foreach (var item in ViewBag.CustomerStats)
        {
            <tr>
                <td>
                    @item.CustomerCount
                </td>
                <td>
                    @item.Postcode
                </td>
            </tr>
        }
    </table>
</div>


<h2>Booking distribution with respect to rooms</h2>
<br />

<div>
    <table class="table">
        @* .table is a Bootstrap class giving table styles *@
        <tr>
            <th>
                @Html.DisplayNameFor(m => m.RoomID)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.BookingCount)
            </th>
        </tr>

        @foreach (var item in ViewBag.BookingStats)
        {
            <tr>
                <td>
                    @item.RoomID
                </td>
                <td>
                    @item.BookingCount
                </td>
            </tr>
        }
    </table>
</div>
